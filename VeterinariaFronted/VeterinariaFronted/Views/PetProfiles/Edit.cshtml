@model PetProfile

@{
    ViewData["Title"] = "Editar Mascota";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inventario</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VeterinariaFronted.styles.css" asp-append-version="true" />
</head>

<body>
    <div class="container mt-4">
        <h1 class="text-center">Editar Mascota</h1>

        <form asp-action="Edit" method="post" class="border p-4 bg-light rounded shadow">
            @Html.HiddenFor(m => m.Id)

            <div class="form-group mb-3">
                <label asp-for="Nombre" class="form-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" required />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Edad" class="form-label">Edad</label>
                <input asp-for="Edad" class="form-control" required />
                <span asp-validation-for="Edad" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Raza" class="form-label">Raza</label>
                <input asp-for="Raza" class="form-control" required />
                <span asp-validation-for="Raza" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Peso" class="form-label">Peso</label>
                <input asp-for="Peso" class="form-control" required />
                <span asp-validation-for="Peso" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Observaciones" class="form-label">Observaciones</label>
                <textarea asp-for="Observaciones" class="form-control"></textarea>
                <span asp-validation-for="Observaciones" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Medicamento" class="form-label">Medicamento</label>
                <input asp-for="Medicamento" class="form-control" />
                <span asp-validation-for="Medicamento" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ProximaCita" class="form-label">Próxima Cita</label>
                <input asp-for="ProximaCita" type="date" class="form-control" />
                <span asp-validation-for="ProximaCita" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="GastoDelDia" class="form-label">Gasto del Día</label>
                <input asp-for="GastoDelDia" class="form-control" />
                <span asp-validation-for="GastoDelDia" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NombreDueno" class="form-label">Nombre del Dueño</label>
                <input asp-for="NombreDueno" class="form-control" required />
                <span asp-validation-for="NombreDueno" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Telefono" class="form-label">Teléfono</label>
                <input asp-for="Telefono" class="form-control" required />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Dpi" class="form-label">DPI</label>
                <input asp-for="Dpi" class="form-control" />
                <span asp-validation-for="Dpi" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EdadDueno" class="form-label">Edad del Dueño</label>
                <input asp-for="EdadDueno" class="form-control" />
                <span asp-validation-for="EdadDueno" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
