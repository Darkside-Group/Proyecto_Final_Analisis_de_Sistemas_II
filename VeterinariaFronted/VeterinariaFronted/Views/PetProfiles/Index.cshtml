@model IEnumerable<PetProfile>

@{
    ViewData["Title"] = "Lista de Mascotas";
}

<h1>Lista de Mascotas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar Mascota</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Edad</th>
            <th>Raza</th>
            <th>Peso</th>
            <th>Nombre del Dueño</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Edad</td>
                <td>@item.Raza</td>
                <td>@item.Peso</td>
                <td>@item.NombreDueno</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
