@model PetProfile

@{
    ViewData["Title"] = "Eliminar Mascota";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inventario</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VeterinariaFronted.styles.css" asp-append-version="true" />
</head>

<body>
    <div class="container mt-4">
        <h1 class="text-center">Eliminar Mascota</h1>

        <h3 class="text-center">¿Estás seguro de que deseas eliminar esta mascota?</h3>

        <div class="border p-3 rounded bg-light">
            <h4>Nombre: @Model.Nombre</h4>
            <p>Edad: @Model.Edad</p>
            <p>Raza: @Model.Raza</p>
            <p>Peso: @Model.Peso</p>
            <p>Nombre del Dueño: @Model.NombreDueno</p>
            <p>Teléfono: @Model.Telefono</p>
        </div>

        <form asp-action="Delete" method="post" class="mt-3">
            @Html.HiddenFor(m => m.Id)
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</body>
</html>
