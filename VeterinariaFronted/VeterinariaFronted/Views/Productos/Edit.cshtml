@model Producto

<div class="container mt-4">
    <h1 class="text-center">Editar Producto</h1>

    <form asp-action="Edit" method="post" class="border p-4 bg-light rounded shadow">
        <input type="hidden" asp-for="Id" />

        <div class="form-group mb-3">
            <label for="Nombre" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="Nombre" name="Nombre" value="@Model.Nombre" required />
        </div>

        <div class="form-group mb-3">
            <label for="Informacion" class="form-label">Información</label>
            <input type="text" class="form-control" id="Informacion" name="Informacion" value="@Model.Informacion" required />
        </div>

        <div class="form-group mb-3">
            <label for="Precio" class="form-label">Precio</label>
            <input type="number" class="form-control" id="Precio" name="Precio" value="@Model.Precio" step="0.01" required />
        </div>

        <div class="form-group mb-3">
            <label for="FechaIngreso" class="form-label">Fecha de Ingreso</label>
            <input type="date" class="form-control" id="FechaIngreso" name="FechaIngreso" value="@Model.FechaIngreso.ToString("yyyy-MM-dd")" required />
        </div>

        <div class="form-group mb-3">
            <label for="FechaExpiracion" class="form-label">Fecha de Expiración</label>
            <input type="date" class="form-control" id="FechaExpiracion" name="FechaExpiracion" value="@Model.FechaExpiracion.ToString("yyyy-MM-dd")" required />
        </div>

        <div class="form-group mb-3">
            <label for="Cantidad" class="form-label">Cantidad</label>
            <input type="number" class="form-control" id="Cantidad" name="Cantidad" value="@Model.Cantidad" required />
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
