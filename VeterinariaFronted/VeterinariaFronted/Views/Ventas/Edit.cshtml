@model Venta

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inventario</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VeterinariaFronted.styles.css" asp-append-version="true" />
</head>

<h2>Editar Venta</h2>

<form asp-action="Edit" method="post">
 
    <div class="form-group">
        <label for="ProductoId">Producto</label>
        <input type="number" asp-for="ProductoId" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label for="CantidadVendida">Cantidad Vendida</label>
        <input type="number" asp-for="CantidadVendida" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
