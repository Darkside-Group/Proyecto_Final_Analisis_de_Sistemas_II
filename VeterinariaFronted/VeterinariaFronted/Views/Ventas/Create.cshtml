@model Venta

@{
    ViewData["Title"] = "Registrar Venta";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inventario</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VeterinariaFronted.styles.css" asp-append-version="true" />
</head>

<body>
    <div class="container mt-4">
        <h2 class="text-center">@ViewData["Title"]</h2>

        <form asp-action="Create" method="post" class="border p-4 bg-light rounded shadow">
            <div class="form-group mb-3">
                <label asp-for="ProductoId" class="control-label"></label>
                <select asp-for="ProductoId" class="form-control" asp-items="ViewBag.Productos"></select>
                <span asp-validation-for="ProductoId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CantidadVendida" class="control-label"></label>
                <input asp-for="CantidadVendida" class="form-control" />
                <span asp-validation-for="CantidadVendida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar Venta" class="btn btn-primary" />
            </div>
        </form>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">Volver a la lista de ventas</a>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
