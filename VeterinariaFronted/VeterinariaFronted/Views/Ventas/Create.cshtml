@model Venta 

@{
    ViewData["Title"] = "Registrar Venta";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ProductoId" class="control-label"></label>
        <select asp-for="ProductoId" class="form-control" asp-items="ViewBag.Productos"></select>
        <span asp-validation-for="ProductoId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CantidadVendida" class="control-label"></label>
        <input asp-for="CantidadVendida" class="form-control" />
        <span asp-validation-for="CantidadVendida" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Registrar Venta" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista de ventas</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
