@model IEnumerable<VeterinariaFronted.Models.User>

@{
    ViewData["Title"] = "Usuarios";
}

<h2>Usuarios</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Usuario</a>
    <a asp-action="Login" class="btn btn-secondary">Iniciar Sesión</a>
    <a asp-action="Logout" class="btn btn-danger">Cerrar Sesión</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Usuario</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Username</td>
                <td>@user.Role?.RoleName</td> <!-- Aquí se asume que RoleName es una propiedad en el modelo Role -->
                <td>
                    <a asp-action="Profile" asp-route-id="@user.Id" class="btn btn-info">Ver Perfil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
